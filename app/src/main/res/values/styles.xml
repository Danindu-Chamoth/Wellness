<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Professional Bottom Navigation Text Styles -->
    <style name="BottomNavTextActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/bottom_nav_text_selected</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/bottom_nav_text_unselected</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
