<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="⚙️ SETTINGS"
            android:textColor="#7B1FA2"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="Customize your wellness experience"
            android:textColor="#424242"
            android:textSize="18sp" />

        <!-- Hydration Reminders Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Hydration Reminders"
            android:textColor="#7B1FA2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Test Notification Button -->
        <Button
            android:id="@+id/btn_test_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🧪 Test Notification Now"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF9800"
            android:layout_marginBottom="16dp"
            android:elevation="3dp"
            android:padding="16dp" />

        <!-- Enable Water Reminders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enable Water Reminders"
                android:textColor="#424242"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/switch_water_reminders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Reminder Interval -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reminder Interval"
                android:textColor="#424242"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_reminder_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/reminder_intervals" />
        </LinearLayout>

        <!-- Notification Sound -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notification Sound"
                android:textColor="#424242"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/switch_notification_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Vibration -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vibration"
                android:textColor="#424242"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/switch_vibration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- App Preferences Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="App Preferences"
            android:textColor="#7B1FA2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Theme -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Theme"
                android:textColor="#424242"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/theme_options" />
        </LinearLayout>

        <!-- Font Size -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Font Size"
                android:textColor="#424242"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_font_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/font_size_options" />
        </LinearLayout>

        <!-- Data Management Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Management"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#7B1FA2"
            android:layout_marginBottom="16dp" />

        <!-- Backup Data Button -->
        <Button
            android:id="@+id/btn_backup_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Backup Data"
            android:textColor="@android:color/white"
            android:backgroundTint="#4CAF50"
            android:layout_marginBottom="8dp" />

        <!-- Reinstall Button -->
        <Button
            android:id="@+id/btn_reinstall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reinstall App"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF9800"
            android:layout_marginBottom="8dp" />

        <!-- Clear Habits Button -->
        <Button
            android:id="@+id/btn_clear_habits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear All Habits"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF5252"
            android:layout_marginBottom="8dp" />

        <!-- Clear Mood History Button -->
        <Button
            android:id="@+id/btn_clear_moods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear Mood History"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF5252"
            android:layout_marginBottom="8dp" />

        <!-- Clear All Data Button -->
        <Button
            android:id="@+id/btn_clear_all_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear All Data"
            android:textColor="@android:color/white"
            android:backgroundTint="#D32F2F"
            android:layout_marginBottom="24dp" />

        <!-- Advanced Features Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Advanced Features"
            android:textColor="#7B1FA2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Home Screen Widget -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home Screen Widget"
                    android:textColor="#424242"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable quick progress view on home screen"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </LinearLayout>

            <Switch
                android:id="@+id/switch_home_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Step Counter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Step Counter"
                    android:textColor="#424242"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Use device sensors to track daily steps"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </LinearLayout>

            <Switch
                android:id="@+id/switch_step_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Shake Detection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shake Detection"
                    android:textColor="#424242"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shake device to quickly log mood"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </LinearLayout>

            <Switch
                android:id="@+id/switch_shake_detection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Chart Duration -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chart Duration"
                android:textColor="#424242"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spinner_chart_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/chart_duration_options" />
        </LinearLayout>

        <!-- About Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="About Wellness App"
            android:textColor="#7B1FA2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- About Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="App Version: 1.0"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Developer: SLIIT Student Project"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Course: Mobile Application Development"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Year: 2Y 2sem - 2025"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
