<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_background"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="ðŸ˜Š MOOD JOURNAL"
                android:textColor="@color/bottom_nav_blue_dark"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Track your emotional wellness"
                android:textColor="#424242"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Quick Mood Entry Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="12dp"
            android:text="âœ¨ Quick Mood Entry"
            android:textColor="@color/bottom_nav_blue_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Quick Mood Entry Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_background"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Mood Buttons Row -->
            <HorizontalScrollView
                android:id="@+id/moodehorizotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp">

                    <!-- Ecstatic -->
                    <LinearLayout
                        android:id="@+id/layoutEcstatic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/mood_selector_background"
                        android:gravity="center"
                        android:minWidth="80dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/btnVeryHappy"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/mood_button_circle"
                            android:gravity="center"
                            android:text="ðŸ˜"
                            android:textSize="28sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Ecstatic"
                            android:textColor="#424242"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Very Happy -->
                    <LinearLayout
                        android:id="@+id/layoutVeryHappy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/mood_selector_background"
                        android:gravity="center"
                        android:minWidth="80dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/btnHappy"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/mood_button_circle"
                            android:gravity="center"
                            android:text="ðŸ˜Š"
                            android:textSize="28sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Very Happy"
                            android:textColor="#424242"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Excited -->
                    <LinearLayout
                        android:id="@+id/layoutExcited"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/mood_selector_background"
                        android:gravity="center"
                        android:minWidth="80dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/btnExcited"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/mood_button_circle"
                            android:gravity="center"
                            android:text="ðŸ¤©"
                            android:textSize="28sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Excited"
                            android:textColor="#424242"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Happy -->
                    <LinearLayout
                        android:id="@+id/layoutHappy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/mood_selector_background"
                        android:gravity="center"
                        android:minWidth="80dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/btnNeutral"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/mood_button_circle"
                            android:gravity="center"
                            android:text="ðŸ˜ƒ"
                            android:textSize="28sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Happy"
                            android:textColor="#424242"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Content -->
                    <LinearLayout
                        android:id="@+id/layoutContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/mood_selector_background"
                        android:gravity="center"
                        android:minWidth="80dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/btnSad"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/mood_button_circle"
                            android:gravity="center"
                            android:text="ðŸ˜Œ"
                            android:textSize="28sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Content"
                            android:textColor="#424242"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Upset -->
                    <LinearLayout
                        android:id="@+id/layoutUpset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/mood_selector_background"
                        android:gravity="center"
                        android:minWidth="80dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/btnVerySad"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/mood_button_circle"
                            android:gravity="center"
                            android:text="ðŸ˜”"
                            android:textSize="28sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Upset"
                            android:textColor="#424242"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Sad -->
                    <LinearLayout
                        android:id="@+id/layoutSad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/mood_selector_background"
                        android:gravity="center"
                        android:minWidth="80dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/btnSadMood"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/mood_button_circle"
                            android:gravity="center"
                            android:text="ðŸ˜¢"
                            android:textSize="28sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Sad"
                            android:textColor="#424242"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Angry -->
                    <LinearLayout
                        android:id="@+id/layoutAngry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/mood_selector_background"
                        android:gravity="center"
                        android:minWidth="80dp"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/btnAngry"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/mood_button_circle"
                            android:gravity="center"
                            android:text="ðŸ˜ "
                            android:textSize="28sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Angry"
                            android:textColor="#424242"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <!-- Action Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                style="?android:attr/buttonBarStyle">

                <Button
                    android:id="@+id/btnDetailedEntry"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FF9800"
                    android:elevation="3dp"
                    android:text="âœï¸ Detailed Entry"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/btnShareMood"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/bottom_nav_blue_dark"
                    android:elevation="3dp"
                    android:text="ðŸ“¤ Share"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    style="?android:attr/buttonBarButtonStyle" />

            </LinearLayout>

        </LinearLayout>

        <!-- Hidden Elements for Detailed Entry -->
        <EditText
            android:id="@+id/etMoodNote"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="How are you feeling today? What's on your mind?"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:autofillHints="none" />

        <TextView
            android:id="@+id/tvCharCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/500 characters"
            android:textSize="12sp"
            android:textColor="#424242"
            android:gravity="end"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnSaveMood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Mood Entry"
            android:textSize="16sp"
            android:backgroundTint="#FF9800"
            android:elevation="3dp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone" />

        <!-- View Controls Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="12dp"
            android:text="ðŸ‘ï¸ View Options"
            android:textColor="@color/bottom_nav_blue_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- View Toggle Buttons -->
        <LinearLayout
            android:id="@+id/hover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_background"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:padding="16dp"
            style="?android:attr/buttonBarStyle">

            <Button
                android:id="@+id/btnListView"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/bottom_nav_blue_dark"
                android:elevation="2dp"
                android:text="ðŸ“‹ List View"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/btnCalendarView"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/bottom_nav_blue_dark"
                android:text="ðŸ“… Calendar"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Calendar View Container -->
        <include
            android:id="@+id/calendarView"
            layout="@layout/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Statistics Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="12dp"
            android:text="ðŸ“Š Your Statistics"
            android:textColor="@color/bottom_nav_blue_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Quick Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_background"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTotalEntries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/bottom_nav_blue_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Entries"
                    android:textSize="12sp"
                    android:textColor="#424242" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/rounded_background"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTodayEntries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/bottom_nav_blue_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textSize="12sp"
                    android:textColor="#424242" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_background"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvWeeksTracked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/bottom_nav_blue_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weeks Tracked"
                    android:textSize="12sp"
                    android:textColor="#424242" />

            </LinearLayout>

        </LinearLayout>

        <!-- Mood History Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="12dp"
            android:text="ðŸ“ Recent Mood Entries"
            android:textColor="@color/bottom_nav_blue_dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Mood History Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_background"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Mood History -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMoodHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="true" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
