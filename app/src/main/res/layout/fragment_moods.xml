<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:padding="20dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mood Journal"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#2D3748"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track your emotional wellness"
            android:textSize="16sp"
            android:textColor="#718096"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Quick Mood Entry Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="Quick Mood Entry"
                    android:textColor="#2D3748"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Mood Buttons Row -->
                <HorizontalScrollView
                    android:id="@+id/moodehorizotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fillViewport="true"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="8dp">

                        <!-- Ecstatic -->
                        <LinearLayout
                            android:id="@+id/layoutEcstatic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:background="@drawable/mood_selector_background"
                            android:gravity="center"
                            android:minWidth="80dp"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/btnVeryHappy"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/mood_button_circle"
                                android:gravity="center"
                                android:text="😍"
                                android:textSize="28sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Ecstatic"
                                android:textColor="#4A5568"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Very Happy -->
                        <LinearLayout
                            android:id="@+id/layoutVeryHappy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:background="@drawable/mood_selector_background"
                            android:gravity="center"
                            android:minWidth="80dp"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/btnHappy"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/mood_button_circle"
                                android:gravity="center"
                                android:text="😊"
                                android:textSize="28sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Very"
                                android:textColor="#4A5568"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Excited -->
                        <LinearLayout
                            android:id="@+id/layoutExcited"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:background="@drawable/mood_selector_background"
                            android:gravity="center"
                            android:minWidth="80dp"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/btnExcited"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/mood_button_circle"
                                android:gravity="center"
                                android:text="🤩"
                                android:textSize="28sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Excited"
                                android:textColor="#4A5568"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Happy -->
                        <LinearLayout
                            android:id="@+id/layoutHappy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:background="@drawable/mood_selector_background"
                            android:gravity="center"
                            android:minWidth="80dp"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/btnNeutral"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/mood_button_circle"
                                android:gravity="center"
                                android:text="😃"
                                android:textSize="28sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Happy"
                                android:textColor="#4A5568"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Content -->
                        <LinearLayout
                            android:id="@+id/layoutContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:background="@drawable/mood_selector_background"
                            android:gravity="center"
                            android:minWidth="80dp"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/btnSad"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/mood_button_circle"
                                android:gravity="center"
                                android:text="😊"
                                android:textSize="28sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Content"
                                android:textColor="#4A5568"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Upset -->
                        <LinearLayout
                            android:id="@+id/layoutUpset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:background="@drawable/mood_selector_background"
                            android:gravity="center"
                            android:minWidth="80dp"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/btnVerySad"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/mood_button_circle"
                                android:gravity="center"
                                android:text="😔"
                                android:textSize="28sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Upset"
                                android:textColor="#4A5568"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Add more mood options here if needed -->
                        <!-- Sad -->
                        <LinearLayout
                            android:id="@+id/layoutSad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:background="@drawable/mood_selector_background"
                            android:gravity="center"
                            android:minWidth="80dp"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/btnSadMood"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/mood_button_circle"
                                android:gravity="center"
                                android:text="😢"
                                android:textSize="28sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Sad"
                                android:textColor="#4A5568"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Angry -->
                        <LinearLayout
                            android:id="@+id/layoutAngry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:background="@drawable/mood_selector_background"
                            android:gravity="center"
                            android:minWidth="80dp"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/btnAngry"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/mood_button_circle"
                                android:gravity="center"
                                android:text="😠"
                                android:textSize="28sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Angry"
                                android:textColor="#4A5568"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

                <!-- Action Buttons Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnDetailedEntry"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_primary"
                        android:text="✏️ Detailed Entry"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnShareMood"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_secondary"
                        android:text="📤 Share"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Hidden Elements for Detailed Entry -->
        <EditText
            android:id="@+id/etMoodNote"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="How are you feeling today? What's on your mind?"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvCharCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/500 characters"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="end"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnSaveMood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Mood Entry"
            android:textSize="16sp"
            android:backgroundTint="#F57C00"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp"
            android:visibility="gone" />

        <!-- View Toggle Buttons -->
        <LinearLayout
            android:id="@+id/hover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnListView"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_outline_gray"
                android:text="📋 List View"
                android:textColor="#0B0B0B"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnCalendarView"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_outline_gray"
                android:text="📅 Calendar"
                android:textColor="#4A5568"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Calendar View Container -->
        <include
            android:id="@+id/calendarView"
            layout="@layout/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Quick Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvTotalEntries"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#2D3748" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Entries"
                        android:textSize="12sp"
                        android:textColor="#718096" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvTodayEntries"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#2D3748" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:textSize="12sp"
                        android:textColor="#718096" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvWeeksTracked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#2D3748" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weeks Tracked"
                        android:textSize="12sp"
                        android:textColor="#718096" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Mood History Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recent Mood Entries"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2D3748"
            android:layout_marginBottom="16dp" />

        <!-- Mood History -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMoodHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
